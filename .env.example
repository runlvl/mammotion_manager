# Mammotion Web Control v2 - Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false
ACCESS_LOG=true

# Mammotion API
REGION=eu
COUNTRY_CODE=DE

# Security
SECRET_KEY=your-super-secret-key-change-in-production-please
SESSION_EXPIRE_HOURS=24
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Features
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
STATUS_POLL_INTERVAL=15

# Optional Configuration
STATIC_DIR=./src/mammotion_web/static
TEMPLATES_DIR=./src/mammotion_web/templates

# Development Settings
# DEBUG=true
# RELOAD=true
# LOG_LEVEL=DEBUG
